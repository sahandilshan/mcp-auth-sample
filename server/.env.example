# ==============================================
# MCP University Demo Server - Environment Variables
# ==============================================

# ======================
# Authentication Settings
# ======================

# Enable/disable authentication (default: true)
ENABLE_AUTH=true

# OAuth 2.0 / OIDC Provider Settings
AUTH_ISSUER=https://api.asgardeo.io/t/<tenant>/oauth2/token
CLIENT_ID=<your-client-id>
JWKS_URL=https://api.asgardeo.io/t/<tenant>/oauth2/jwks

# MCP Server URL (used for OAuth callbacks and metadata)
MCP_SERVER_URL=http://localhost:8000

# Token Validation Options
VALIDATE_AUDIENCE=true
VALIDATE_ISSUER=true

# Required OAuth Scopes (space-separated)
# Default: "openid email profile roles"
# REQUIRED_SCOPES=openid email profile roles

# ======================
# SSL/TLS Settings
# ======================

# Enable/disable SSL certificate verification (default: true)
# Set to false only for development with self-signed certificates
SSL_VERIFY=true

# Optional: Path to custom CA bundle for SSL verification
# CA_BUNDLE=/path/to/ca-bundle.crt

# ======================
# Database Settings
# ======================

# MongoDB connection URI
MONGO_URI=mongodb://localhost:27017

# Alternative MongoDB URI variable name (for compatibility)
# MONGODB_URI=mongodb://localhost:27017

# Database name
DB_NAME=university_demo

# ======================
# Legacy Settings (Optional)
# ======================

# Tenant name (optional, for backward compatibility)
# TENANT=metropolis

# ======================
# Example Configurations
# ======================

# --- Asgardeo (WSO2) ---
# AUTH_ISSUER=https://api.asgardeo.io/t/yourorg/oauth2/token
# JWKS_URL=https://api.asgardeo.io/t/yourorg/oauth2/jwks
# CLIENT_ID=your_client_id
